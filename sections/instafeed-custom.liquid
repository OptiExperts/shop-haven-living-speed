{% style %}
@media (max-width: 720px) {
  #shopify-section-{{section.id}} .instafeed--container {
    padding-top: {{ section.settings.section_spacing_mobile }}px;
    padding-bottom: {{ section.settings.section_spacing_mobile }}px;
  }
}

@media (min-width: 720px) {
  #shopify-section-{{section.id}} .instafeed--container {
    padding-top: {{ section.settings.section_spacing_desktop }}px;
    padding-bottom: {{ section.settings.section_spacing_desktop }}px;
  }
}
{% endstyle %}

<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="instafeed-custom"
>
</script>

<section id="insta-container" class="instafeed--container">
    <div class="home-section--preheading"><a href="https://instagram.com/{{ section.settings.insta_handle }}">{{ section.settings.preheading }}</a></div>
    <h2 class="home-section--title">{{ section.settings.title }}</h2>
    <div class="home-section--subheading">{{ section.settings.text }}</div>
    <div id="insta-feed"></div>
</section>

{% schema %}
{
   "name":"Instafeed App",
   "settings":[
      {
         "type":"text",
         "label":"Instagram handle",
         "id":"insta_handle",
         "info": "Write it without the @"
      },
      {
         "type":"text",
         "label":"Preheading",
         "id":"preheading",
         "default": "@yourhandle"
      },
	  {
         "type":"text",
         "label":"Heading",
         "id":"title",
         "info": "This is in place of the title set in the app. That title should be left blank."
      },
	  {
         "type":"textarea",
         "label":"Text",
         "id":"text"
      },
      {
         "type": "paragraph",
         "content": "The section title is set in the Instafeed App"
      },
      {
         "type":"textarea",
         "id":"html_area",
         "label":"Custom Code (optional)"
      },
	  {
        "type": "range",
        "id": "section_spacing_desktop",
        "label": "Desktop section spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 50
      },
      {
        "type": "range",
        "id": "section_spacing_mobile",
        "label": "Mobile section spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 36
      }
   ],
   "presets":[
      {
         "name":"Custom Instafeed",
         "category":"Instagram Feed"
      }
   ]
}
{% endschema %}